<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pop_bg"
    android:gravity="center"
    tools:context=".IslemlerActivity">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:gravity="center_horizontal"
        android:src="@drawable/soru"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <Button
        android:id="@+id/btn_kolay"
        android:layout_width="200dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="Kolay Sorular"/>
    <Button
        android:id="@+id/btn_orta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="orta Sorular"/>
    <Button
        android:id="@+id/btn_zor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="zor Sorular"/>

    <ImageView
        android:id="@+id/img_geri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher_geri_foreground"
        tools:ignore="VectorDrawableCompat"
        app:tint="#FFFFFF" />


</LinearLayout>