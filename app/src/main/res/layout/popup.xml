<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/hyhy"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imguzman"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/ayn" />

        <TextView
            android:id="@+id/txtuzman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imguzman"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Uzman Aranıyor..."
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtkonu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtuzman"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="cevap a"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_below="@id/txtkonu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/greeen"
            android:backgroundTint="@color/black"
            android:text="Teşekkürler"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:backgroundTint="#000000"
            app:backgroundTintMode="screen" />
    </LinearLayout>


</RelativeLayout>