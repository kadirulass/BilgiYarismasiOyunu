                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcevap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="TextView"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>



